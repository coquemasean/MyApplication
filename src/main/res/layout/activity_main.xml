<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="226dp"
        android:layout_height="212dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:paddingLeft="10dp"
        app:srcCompat="@drawable/pikatchu" />

    <RelativeLayout
        android:id="@+id/list_Layout"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="92dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/card_main"
        android:padding="15dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:transitionName="imageTransition"
            app:srcCompat="@drawable/pokeball" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/profile_image"
            android:layout_marginEnd="65dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Pokemon World"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:transitionName="nameTransition" />

        <TextView
            android:id="@+id/profile_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/profile_name"
            android:layout_centerVertical="true"
            android:fontFamily="@font/nunito_semibold"
            android:text="Welcome to the Pokemon World"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:transitionName="descTransition" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="Click on the card view to open the ball"
        android:textColor="@android:color/white" />

</RelativeLayout>